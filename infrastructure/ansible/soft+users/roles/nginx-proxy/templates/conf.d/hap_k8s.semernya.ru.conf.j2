server {
    listen 80;
    server_name hapk8s.semernya.ru;

    access_log /var/log/nginx/access.hap_k8s.log main;
    error_log /var/log/nginx/error.hap_k8s.log debug;

    keepalive_timeout 650;
    keepalive_requests 10000;

 return 301 https://hapk8s.semernya.ru$request_uri;

}

server {
    listen 443 ssl;
    server_name  hapk8s.semernya.ru;

    access_log /var/log/nginx/access.hap_k8s.log main;
    error_log /var/log/nginx/error.hap_k8s.log;

    keepalive_timeout 650;
    keepalive_requests 10000;

    ssl_stapling on;
    ssl_stapling_verify on;

    ssl_certificate /etc/nginx/ssl/bundle.semernya.crt;
    ssl_certificate_key /etc/nginx/ssl/semernya.key;
    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;

location / {
    proxy_pass http://hap_k8s/;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-for $remote_addr;
    #port_in_redirect off;
    proxy_redirect http://hap_k8s/ /;
    proxy_connect_timeout 600;

    }
}