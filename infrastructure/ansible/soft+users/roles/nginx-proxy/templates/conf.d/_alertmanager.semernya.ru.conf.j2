server {
    listen 80;
    server_name alertmanager.semernya.ru;

    access_log /var/log/nginx/access.alertmanager.log main;
    error_log /var/log/nginx/error.alertmanager.log debug;

    keepalive_timeout 650;
    keepalive_requests 10000;

return 301 https://alertmanager.semernya.ru$request_uri;

}

server {
    listen 443 ssl;
    server_name  alertmanager.semernya.ru;

    access_log /var/log/nginx/access.alertmanager.log main;
    error_log /var/log/nginx/error.alertmanager.log;

    keepalive_timeout 650;
    keepalive_requests 10000;

    ssl_stapling on;
    ssl_stapling_verify on;

    ssl_certificate /etc/nginx/ssl/bundle.semernya.crt;
    ssl_certificate_key /etc/nginx/ssl/semernya.key;
    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;    

location / {
    proxy_pass http://k8s/;

    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;

#    proxy_redirect off;


    }
}